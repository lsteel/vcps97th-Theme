// out: ../style.css, sourcemap: true, compress: true

/* Mobile first queries */
@import 'wpDefault'
@import 'reset'
@import 'fontface'

$black = #000
$white = #fff
$off-white = #f9f9f9
$clear-white = rgba(255,255,255,.90)
$map-white = rgba(255,255,255,.75)
$blog-white = rgba(255,255,255,.75)

$green = #54BC48
$purple = #C26ABA
$lgt-blue = #3399CC
$purple = #6761CF
$red = #B43A54
$yellow = #E9DF39
$grey = #4D4D4D
$dark-grey = #333333
$lgt-grey = #939393
$orange = #FF9933

.green
  color $green

.purple
  color $purple

.lgt-blue
  color $lgt-blue

.purple
  color $purple

.red
  color $red

.yellow
  color $yellow

.grey
  color $grey

.orange
  color $orange


//Futura-Heavy          700
//Futura-Book           400

a,
a:link,
a:visited,
a:hover,
a:active
  color inherit
  text-decoration none

html, body
  margin 0 auto
  padding 0
  width 100%
  height auto
  min-height 100vh
  font-size 13px
  font-weight 400
  font-family 'Source Sans Pro', sans-serif
  letter-spacing .8px
  color $grey
  background-color $white
  overflow-x hidden

body
  padding-top 20px


h4,h5,h6,p,ol,ul
  line-height 1.5

h1
  padding 3px 0 20px
  font-weight 900
  font-size 325%

h2
  padding 3px 0 10px
  font-weight 600
  font-size 175%

h3
  padding 3px 0 10px
  font-weight 400
  font-size 150%

h4
  padding 3px 0 10px
  font-weight 400
  font-size 125%

h5
  font-weight 600
  font-size 113%

p
  padding 2px 0 10px
  font-size 100%
  a,
  a:link,
  a:visited,
  a:hover,
  a:active
    color inherit
    text-decoration underline

img
  max-width 100%

.italic
  font-style italic

.hidden
  display none

.flat
  margin 0
  padding 0
  height 1px

.clear
  clear both

.max-width-wrapper
  margin 0 auto
  padding 40px 10px 30px
  width 100%
  max-width 1024px
  height auto
  min-height 100%

.site-header
  position fixed
  top 0
  width 100%
  height 41px
  background $white
  //box-shadow 0 8px 60px 0 rgba(0,0,0,.15)
  z-index 9999

.admin-bar .site-header
  top 32px

.header-shadow
  position absolute
  top 41px
  width 3000px
  height 7px
  background-image url('images/shadow.png')
  background-repeat repeat-x
  background-size auto 100%
  &.header-shadow-right
    left 75px
  &.header-shadow-left
    left -2972px

.site-branding
  position absolute
  top 5px
  left 28px
  .header-logo
    height auto
    width 105px
    max-width none

.logo-shadow
  position absolute
  top 36px
  width auto
  min-width none
  max-width none
  height 20px

.phone-container
  display none
  position absolute
  top 5px
  right 38px
  svg
    margin 0 5px 0 5px
    vertical-align -2px

.menu-toggle, .main-navigation.toggled ul
  display block
  display none
  position absolute
  padding 10px 10px
  top 0
  right 0
  height 41px
  width 41px
  border-radius 0
  border none
  color $white
  text-shadow none
  font-size 125%
  background $green
  box-shadow none

.nav-container
  position absolute
  top 36px
  right 26px
  font-size 113%
  color #333333
  > *
    display inline-block
    vertical-align middle

.main-navigation > div > ul
  li
    padding 0 10px

.raq-btn-container
  display none
  padding 5px 10px
  background $green
  font-size 106%
  color $white
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px
  &:hover
    background #439639
    text-decoration underline
    .triangle-text svg polyline
      fill $green






//HOME PAGE

.section, .dual-section, .customer-section
  height auto

.box-btn
  display inline-block
  background $orange
  color $white
  &:hover
    background $white
    color $orange
    a
      border-color $orange
    .triangle-text svg polyline
      fill $orange
  a
    display block
    padding 0px 20px
    border 2px solid $orange

.raq-banner-wrapper.blue-banner
  color #75FFFF
  background $lgt-blue

.blue-banner .raq-btn
  background-color $lgt-blue
  &:hover
    color $lgt-blue
    .triangle-text svg polyline
      fill $lgt-blue

.customers-section
  padding 40px 0
  text-align center
  h2
    padding 0 0 30px
    margin 0 auto
    width 80%
    max-width 680px
    font-size 225%
    font-weight 400
  p
    margin 0 auto
    width 80%
    max-width 680px
    font-size 125%
    font-weight 300
  hr
    margin 50px auto
    width 112px
    height 2px
    background $grey

.customer-logos
  display flex
  margin 0 auto
  width 85%
  flex-direction column-reverse
  flex-wrap wrap
  justify-content center
  align-content center
  height auto
  img
    display block
    margin 10px auto
    height 65px
    width auto
  .buzzfeed-logo
    order 1
  .disney-logo
    order 2
  .microsoft-logo
    order 4
  .amazon-logo
    order 3
  .pg-logo, .warner-bros-logo, .coast-guard-logo
    display none

.section-two
  .max-width-wrapper
    padding 0px 0px 30px
    max-width none
  .section-left, .section-right
    display inline-block
    width 100%
    color $white
  .section-left
    -webkit-box-shadow: inset 0px 4px 5px 0px rgba(0,0,0,0.25);
    -moz-box-shadow: inset 0px 4px 5px 0px rgba(0,0,0,0.25);
    box-shadow: inset 0px 4px 5px 0px rgba(0,0,0,0.25);
    z-index 9998
  .section-right
    padding 30px 0 5px
    text-align center
    background $dark-grey
    h2
      padding-bottom 20px
      font-size 188%
      font-weight 400
    p
      margin 0 auto
      padding-bottom 30px
      width 76%
      font-size 94%
    .raq-btn
      color $white
      border 3px solid $orange
      background-color $dark-grey
      &:hover
        background-color $orange
        color $dark-grey
        border-color $orange
        .triangle-text svg polyline
          fill $dark-grey

.imac
  top 57px
  left 20px
  width 200px
  height auto

.macbook-air
  position absolute
  bottom -39px
  right 0
  width 190px
  height auto

.section-three
  display flex
  flex-direction row
  justify-content: center

.dual-section
  .section-left, .section-right
    display inline-block
    width 100%
    height auto
    text-align center
    color $white
  .section-left
    background $green
    height auto
  .section-right
    background $dark-grey
  .section-left .content-wrapper, .section-right .content-wrapper
    width 90%
    padding 40px 20px
    margin 0 auto
    max-width 512px
    h2
      font-size 200%
      font-weight 400
    p
      margin 0 auto
      padding 20px 0 40px 0
      max-width 345px
      font-size 113%
      line-height 1.2
  .section-left p
    color $grey
  .section-right .raq-btn
    background-color $dark-grey
    &:hover
      color $dark-grey
      .triangle-text svg polyline
        fill $dark-grey





//FAQ PAGE


.blue-triangle
  height 9px
  vertical-align 1px

.answer-wrapper
  background $off-white
  -webkit-box-shadow inset 0px 4px 2px 0px rgba(0,0,0,0.2)
  -moz-box-shadow inset 0px 4px 2px 0px rgba(0,0,0,0.2)
  box-shadow inset 0px 4px 2px 0px rgba(0,0,0,0.2)
  p
    font-weight 300
  .to-top
    margin-bottom 30px
    color $lgt-blue
    font-size 95%
    img
      height 5px
      vertical-align 2px




//HERO SECTION CSS

.hero-wrapper
  margin 0 auto
  height auto
  width auto
  min-height 300px
  max-width 1024px
  text-align center
  h1
    max-width 95%
    text-transform uppercase
  h2
    text-transform uppercase

.hero-left, .hero-right
  display block
  position absolute
  height 100%

.hero-left
  left 0
  width 100%
  background $clear-white

.hero-right
  right 0
  width 100%
  background-size cover
  background-position center
  .background-container
    width 100%
    height 100%
    overflow hidden
    &.wider
      width 120%
  img
    width auto
    max-height 100%
    &.hero-right-background
      position absolute
      left 0
      top 0
      height 100%
      width 100%
      max-height none
      max-width none
      object-fit cover
    &.left-cover
      position absolute
      left 0
      top 0
    &.right-cover
      display none
      position absolute
      right 0
      top 0
      width 0

.hero-btn
  display inline-block
  background $green
  color $white
  &:hover
    background $white
    color $green
    a
      border-color $green
    .triangle-text svg polyline
      fill $green
  a
    display block
    padding 0px 20px
    border 2px solid $green



//BLOG PAGE

.blog-hero.hero-wrapper
  .featured-text
    padding 10px 0 0
    font-weight 700
  h1
    padding-bottom 0
  .entry-meta
    color $green

.grid
  width 100%
  max-width 1024px
  height auto
  margin 0 auto 40px

.grid-sizer
  width: 100%

.grid-item
  width: 100%

article
  margin 0
  height auto
  overflow hidden
  &.hentry
    margin 0
  .thumbnail-wrapper
    display: block
    height 198px
    overflow hidden
    img
      position absolute
      width 100%
      height 100%
      object-fit cover
  h2
    padding 5px 0 10px
    font-size 163%
  .entry-meta
    padding-bottom 6px
    color $green
    font-size 100%

.entry-content
  margin 0
  font-weight 300
  line-height 0
  p
    line-height 1.3

.read-more-link
  padding-bottom 20px
  margin-bottom 20px
  border-bottom 2px solid #E5E5E5

.blogroll-page-content
  padding-top 30px
  -webkit-box-shadow: inset 0px 4px 5px 0px rgba(0,0,0,0.25);
  -moz-box-shadow: inset 0px 4px 5px 0px rgba(0,0,0,0.25);
  box-shadow: inset 0px 4px 5px 0px rgba(0,0,0,0.25);

.blog-content-wrapper
  padding 10px 15px 8px

.grid-item-featured
  width: 100%
  h2
    font-size 250%
    &:before
      display block
      content: 'Previously Featured'
      width 100%
      font-size 35%
      color: $green
  .thumbnail-wrapper
    height 198px

.inner
  display block
  padding 10px
  height 100%

#infscr-loading
  width 100%
  text-align center
  margin 0 0 50px 0
  img
    margin 0 auto



// CONTACT PAGE

.maps-wrapper
  padding 10px 0
  background $off-white
  -webkit-box-shadow inset 0px 5px 14px 0px rgba(0,0,0,0.25), inset 0px -5px 14px 0px rgba(0,0,0,0.25)
  -moz-box-shadow inset 0px 5px 14px 0px rgba(0,0,0,0.25), inset 0px -5px 14px 0px rgba(0,0,0,0.25)
  box-shadow inset 0px 5px 14px 0px rgba(0,0,0,0.25), inset 0px -5px 14px 0px rgba(0,0,0,0.25)

.map-container
  display inline-block
  margin-bottom 30px
  width 100%
  border 2px solid $lgt-grey
  &.map-left
    float left
  &.map-right
    margin-bottom 0
    float right

.map
  padding 10px
  width 100%
  height 100%

.map-text-container
  position absolute
  padding 0 15px
  top 0
  left 10%
  height 100%
  background $map-white
  h3
    margin-top 45%
    font-size 225%
  p
    font-weight 300
    a, a:link, a:visited, a:hover, a:active
      text-decoration none

.contact-info
  padding 0 10px

.raq-banner-wrapper
  text-align center
  color #B8FF78
  background $green
  h3
    padding-bottom 30px
    font-size 350%

.raq-btn
  display inline-block
  margin-bottom 20px
  color $white
  font-size 94%
  font-weight 700
  border 3px solid $white
  background-color $green
  transition background-color .5s ease
  &:hover
    background-color $white
    color $green
    border-color $white
    .triangle-text svg polyline
      fill $green
  a
    padding 3px 15px

.triangle-text
  margin-left 4px

.site-footer
  background #4D4D4D
  text-align center
  img
    position absolute
    top 85px
    left 50%
    margin-top -52px
    margin-left -49px
    width 98px

.footer-navigation
  margin-top 130px
  font-size 113%
  font-weight 700
  ul
    margin 0
    padding 2px 20px
    list-style none
    font-weight 300
    color $off-white
    li
      padding 5px 0

.footer-three,.footer-four
  display none




@import 'media-queries'
